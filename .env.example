# Environment variables for Spark Intelligence Copilot

# Debug mode
DEBUG=False

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/spark_copilot

# Google Cloud
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1

# Vector Store
VECTORSTORE_TYPE=pinecone
VECTORSTORE_INDEX=spark-intelligence

# ML Models
MODEL_REGISTRY_PATH=/models
RUNTIME_PREDICTOR_MODEL=runtime_predictor_v1

# Spark
SPARK_MASTER_URL=local
SPARK_APPNAME=SparkIntelligenceCopilot

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# API
API_HOST=0.0.0.0
API_PORT=8000

# Logging
LOG_LEVEL=INFO
